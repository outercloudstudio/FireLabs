func fall => {
    if($inair && !$jumping) => {
        rc("tp ~ ~-0.1 ~")
    }

    if($jumping) => {
        rc("tp ~ ~0.2 ~")
    }

    delay(1) => {
        fall()
    }
}

func inAir => {
    $inair = true
}

func notInAir => {
    $inair = false
}

func inFront => {
    $infront = true
}

func notInFront => {
    $infront = false
}

func update => {
    rc("execute @s ~ ~ ~ detect ~ ~-0.2 ~ air 0 event entity @s frw:inAir")
    rc("execute @s ~ ~ ~ detect ~ ~-0.2 ~ cobblestone 0 event entity @s frw:notInAir")
    rc("execute @s ~ ~ ~ detect ~ ~ ~0.5 air 0 event entity @s frw:notInFront")
    rc("execute @s ~ ~ ~ detect ~ ~ ~0.5 cobblestone 0 event entity @s frw:inFront")
}

func jump => {
    if(!$inair && !$jumping) => {
        $jumping = true

        delay(8) => {
            $jumping = false
        }
    }
}

func move => {
    if(!$infront) => {
        rc("tp ~ ~ ~0.5")
    }
}

func start =>{
    fall()
}